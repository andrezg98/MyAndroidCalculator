<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/preview_calculation"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.35"
        android:background="@color/green_screen"
        android:padding="10dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.85"
        android:layout_gravity="center|right"
        android:text="@string/screen"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        android:background="@color/green_screen"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10sp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp"
        android:autofillHints="false"
        android:inputType="none"
        tools:ignore="RtlCompat"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8">

        <Button
            android:id="@+id/mc"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/mc"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/invert"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/invert"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/squared"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/x2"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/pi"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/pi"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/seven"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_7"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_8"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_9"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/c"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8">

        <Button
            android:id="@+id/mr"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/mr"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/mas"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/mas"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/menos"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/menos"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/sin"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/sin"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_4"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_5"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_6"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/clear_element"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/ce"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8">

        <Button
            android:id="@+id/m_mas"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/m_mas"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/div"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/multiply"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/cos"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/cos"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_2"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_3"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/potencia"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/potencia"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="8">

        <Button
            android:id="@+id/m_menos"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/m_menos"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/raiz"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/square"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/percent"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/percent"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/tan"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/tan"
            android:textColor="#FF0000"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/coma"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:cornerRadius="25dp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:text="@string/equal"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:cornerRadius="25dp" />

    </LinearLayout>

</LinearLayout>